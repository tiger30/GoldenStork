<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@xml/item_grey_selector"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llMainCat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/standard_margin"
        android:paddingTop="@dimen/standard_wide_padding" >

        <ImageView
            android:id="@+id/ivIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_action_collapse" />
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/standard_padding_slide_menu"
            android:gravity="left"
            android:text="@string/golden_stork"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_name" />
    </LinearLayout>

</LinearLayout>